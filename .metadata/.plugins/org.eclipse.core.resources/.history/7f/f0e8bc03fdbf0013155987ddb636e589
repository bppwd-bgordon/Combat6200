
public class player 
{
// Instance variables
	private int _speed;
	private boolean _alive;
	
// Constructor
	public player(int playerNo, int x, int y)
	{
		_speed = 5;
		_alive = true;
	}
	
// Methods
	// Getters
	public int getSpeed(){return this._speed;}
	public boolean getAlive(){return this._alive;}
	
	// Setters
	public void setSpeed(int speed)
	{
		if(speed >= 0 && speed <= 10) this._speed = speed; 
		else return;
	}
	public void setStateOfLiving(boolean sentance)
	{
		this._alive = sentance;
	}
}
